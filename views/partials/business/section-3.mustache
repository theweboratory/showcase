<section id="pricing" class="section-3">
  <h2 class="section-heading">{{ section3.heading }}</h2>
  <div class="section-heading-line"></div>
  <div class="swiper mySwiper">
    <div class="swiper-wrapper cards-wrapper">
      {{#section3.cards}}
      <div class="swiper-slide card">
        <div class="card-front">
          <h3 class="card-heading {{ heading.class }}">{{ heading.text }}</h3>
          <h4 class="card-price">{{ price }}</h4>
          <ul class="card-list {{ class }}">
            {{#list}}
            <li>
              <i class="fas {{ class }}"></i>
              <span>{{ item }}</span>
            </li>
            {{/list}}
          </ul>
          <button class="card-btn {{ button.class }}">{{ button.text }}</button>
        </div>
    </div>
    {{/section3.cards}}
</div>
</div>
</section>

